import java.util.*;
public class Count1{
    public static void main(String[] args){
        Scanner s=new Scanner(System.in);
      int n=s.nextInt();
      int a[]=new int[n];
      for(int i=0;i<n;i++){
          a[i]=s.nextInt();
      }
      int i=0,c=0;
      
   while(a[i]==1){
       c++;
       i++;
       if(i==n){
           break;
       }
   }
   System.out.print(c);
    }
}
